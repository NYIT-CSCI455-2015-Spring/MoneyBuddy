<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".HomeScreen" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Money Buddy"
        android:id="@+id/home_textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="General Budgeting"
        android:id="@+id/general_budgeting"
        android:clickable="true"
        android:onClick="GeneralBudgetingButton"
        android:layout_below="@+id/home_textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Savings History"
        android:id="@+id/savings_history"
        android:layout_below="@+id/general_budgeting"
        android:clickable="true"
        android:onClick="SavingsHistoryButton"
        android:layout_alignRight="@+id/general_budgeting"
        android:layout_alignEnd="@+id/general_budgeting"
        android:layout_alignLeft="@+id/general_budgeting"
        android:layout_alignStart="@+id/general_budgeting"
        android:layout_marginTop="5dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calendar"
        android:id="@+id/calendar"
        android:layout_below="@+id/savings_history"
        android:clickable="true"
        android:onClick="CalendarButton"
        android:layout_alignRight="@+id/savings_history"
        android:layout_alignEnd="@+id/savings_history"
        android:layout_alignLeft="@+id/savings_history"
        android:layout_alignStart="@+id/savings_history"
        android:layout_marginTop="5dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wish list"
        android:id="@+id/wish_list"
        android:layout_below="@+id/calendar"
        android:clickable="true"
        android:onClick="WishlistButton"
        android:layout_alignRight="@+id/calendar"
        android:layout_alignEnd="@+id/calendar"
        android:layout_alignLeft="@+id/calendar"
        android:layout_alignStart="@+id/calendar"
        android:layout_marginTop="5dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Daily Expenses"
        android:id="@+id/daily_expenses"
        android:clickable="true"
        android:onClick="DailyExpensesButton"
        android:layout_below="@+id/wish_list"
        android:layout_alignRight="@+id/wish_list"
        android:layout_alignEnd="@+id/wish_list"
        android:layout_alignLeft="@+id/wish_list"
        android:layout_alignStart="@+id/wish_list"
        android:layout_marginTop="5dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Saved vs. Spent"
        android:id="@+id/saved_spent"
        android:clickable="true"
        android:onClick="SavedSpentButton"
        android:layout_below="@+id/daily_expenses"
        android:layout_alignLeft="@+id/savings_history"
        android:layout_alignStart="@+id/savings_history"
        android:layout_alignRight="@+id/daily_expenses"
        android:layout_alignEnd="@+id/daily_expenses"
        android:layout_marginTop="5dp" />
</RelativeLayout>
