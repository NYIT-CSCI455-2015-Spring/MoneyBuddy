<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".HomeScreen" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Money Buddy"
        android:textStyle="bold"
        android:textSize="40dp"
        android:id="@+id/home_textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/holo_green_dark" />



    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/home_textView"
        android:layout_centerHorizontal="true">

        <Button
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:text="General Budgeting"
            android:id="@+id/general_budgeting"
            android:clickable="true"
            android:onClick="GeneralBudgetingButton"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content"
            android:textSize="20dp" />

        <Button
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:text="Calendar"
            android:id="@+id/calendar"
            android:clickable="true"
            android:onClick="CalendarButton"
            android:layout_marginTop="5dp"
            android:layout_height="wrap_content"
            android:textSize="20dp" />

        <Button
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:text="Wish list"
            android:id="@+id/wish_list"
            android:clickable="true"
            android:onClick="WishlistButton"
            android:layout_marginTop="5dp"
            android:layout_height="wrap_content"
            android:textSize="20dp" />

        <Button
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:text="Daily Expenses"
            android:id="@+id/daily_expenses"
            android:clickable="true"
            android:onClick="DailyExpensesButton"
            android:layout_marginTop="5dp"
            android:layout_height="wrap_content"
            android:textSize="20dp" />

        </LinearLayout>

</RelativeLayout>
